{
  "[lua][luau]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  },
  "files.readonlyInclude": {
    "*.lock": true,
    "*-lock.*": true,
    "*.lock.*": true,
    "*_packages/**": true,
    ".pesde/**": true,
    "dist*/**": true
  },
  "files.eol": "\n",
  "luau-lsp.types.definitionFiles": ["./types/pesde.d.luau"],
  "luau-lsp.completion.imports.ignoreGlobs": ["types/**", "**/.pesde/**"],
  "luau-lsp.ignoreGlobs": ["types/**", "**/.pesde/**"],
  "luau-lsp.platform.type": "roblox",
  "luau-lsp.sourcemap.enabled": true,
  "luau-lsp.sourcemap.generatorCommand": "",
  "luau-lsp.sourcemap.autogenerate": true,
  "luau-lsp.sourcemap.rojoProjectFile": "test.project.json",
  "luau-lsp.sourcemap.sourcemapFile": "sourcemap.json"
}
